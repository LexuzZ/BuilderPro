<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:orientation="vertical"
    tools:context=".HomeOrder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#586F92">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:src="@drawable/ic_menu" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Halaman Checkout"
        android:textSize="20dp"
        android:backgroundTint="#40586F92"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:background="#fff">

    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:layout_margin="15dp">
        <TextView
            android:id="@+id/tv_cust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Customer"
            android:layout_margin="15dp"
            android:background="#fff"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#ccc"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_marginTop="30dp"
            android:background="#ccc"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tukang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0FFFF"
                android:padding="5dp"
                android:text="Nama Tukang"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0FFFF"
                android:padding="5dp"
                android:text="Harga Tukang"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0FFFF"
                android:padding="5dp"
                android:text="Kecamatan"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_ahli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0FFFF"
                android:padding="5dp"
                android:text="Keahlian"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0FFFF"
                android:padding="5dp"
                android:text="Rating"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0FFFF"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tersedia"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="italic">

            </TextView>

            <Button
                android:id="@+id/btn_order"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#586F92"
                android:inputType="textCapWords"
                android:text="Order"
                android:textStyle="bold"></Button>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>